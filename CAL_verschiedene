from random import randintclass Zufall(object):    def __init__(self):        pass    def werfen(self):        self.augen = randint(WZ1, WZ2)    def Wuerfel(self):        return self.augenclass RWuerfel(Zufall):    def __init__(self):        global WZ1        global WZ2        WZ1 = int(input("WÃ¼rfelzahl 1:"))        WZ2 = int(input("WÃ¼rfelzahl 2:"))        if WZ1 == WZ2:            print('Du kannst nicht nur mit einer Seite spielen.')            exit()class Wuerfel(Zufall):    def __init__(self):        global WZ1        WZ1 = 1        global WZ2        WZ2 = 6class Muenze(Zufall):    def __init__(self):        global WZ1        WZ1 = 1        global WZ2        WZ2 = 2class Konto(object):    def __init__(self):        self.stand = 100    def auszahlen(self):        if self.stand == 0:            print('Du hast kein Geld mehr!')        else:            self.stand = self.stand - 1            print('Dein Kontostand:', self.stand)    def einzahlen(self, betrag):        self.stand = self.stand + betrag        print('Dein Kontostand:', self.stand)    def Konto(self):        print('Dein Kontostand:', self.stand)class Spielbrett(object):    def __init__(self):       pass    def setzen(self, gz):        Felder = [1, 2, 3, 4, 5, 6]        if gz in Felder:            print('Du hast auf ', gz, 'gesetzt.')            global Spielzahl            Spielzahl = gz        else:            print('Du kannst nur auf die Zahlen von', WZ1,'-', WZ2,'setzen.')            exit()#    def Spielzahl(self):#        return Spielzahlclass Spiel(object):    def __init__(self):        global wuerfelA        wuerfelA = Wuerfel()        global wuerfelB        wuerfelB = Wuerfel()        global wuerfelC        wuerfelC = Wuerfel()        global s        s = Spielbrett()        global k        k = Konto()    def EinsatzSetzen(self):        k.auszahlen()    def SpielzahlSetzen(self, Zahl):        gz = Zahl        s.setzen(gz)    def wuerfelWerfen(self):        wuerfelA.werfen()        wuerfelB.werfen()        wuerfelC.werfen()        print('Wuerfel 1: ', wuerfelA.Wuerfel())        print('Wuerfel 2: ', wuerfelB.Wuerfel())        print('Wuerfel 3: ', wuerfelC.Wuerfel())    def GewinnAuszahlen(self):        if RZufall == 'WÃ¼rfel' and Wuerfel.Wuerfel() == rundezahl:            k.einzahlen(1)            print('Du hast richtig getippt!')        elif RZufall == 'RWÃ¼rfel' and Wuerfel.Wuerfel() == rrundezahl:            k.einzahlen(1)            print('Du hast richtig getippt!')        elif RZufall == 'MÃ¼nze' and Muenze.Wuerfel() == rundesymbol:            k.einzahlen(1)            print('Du hast richtig getippt!')        else:            print('Du hast leider nichts gewonnen.')    def ZufallWaehlen(self):        global RZufall        RZufall = input("WÃ¼rfel oder MÃ¼nze oder RWÃ¼rfel ")# Spielprogrammglobal RErgebnisRErgebnis = 0global rundezahlRunde = Spiel()Runde.ZufallWaehlen()Runde.EinsatzSetzen()if RZufall == 'WÃ¼rfel':    rundezahl = int(input("Zahl:"))    Runde.SpielzahlSetzen(rundezahl)    Wuerfel = Wuerfel()    Wuerfel.werfen()    print('WÃ¼rfel:', Wuerfel.Wuerfel())elif RZufall == 'MÃ¼nze':    global rundesymbol    rundesymbol = input("Kopf / Zahl:")    if rundesymbol == 'Kopf':        rundesymbol = 1    elif rundesymbol == 'Zahl':        rundesymbol = 2    else:        print('Du kannst nur auf Kopf oder Zahl setzen.')        exit()    Muenze = Muenze()    Muenze.werfen()    print('Seite: ', Muenze.Wuerfel())elif RZufall == 'RWÃ¼rfel':    Wuerfel = RWuerfel()    global rrundezahl    rrundezahl = int(input("Zahl:"))    Wuerfel.werfen()    print('WÃ¼rfel: ', Wuerfel.Wuerfel())Runde.GewinnAuszahlen()print('Ende')
